<h3 class="header">Update Profile </h3>

<%= form_for @user, url: "/profile" do |f| %>

  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :first_name, class: "validate" %>
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :last_name, class: "validate" %>
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <button type='submit' class="btn right">Save</button>
      </div>
    </form>
  </div>
<% end %>  